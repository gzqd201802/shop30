<!-- 1.0 搜索框 -->
<view class="search">
  <view class="search-in">
    <icon class="search-icon" size="32rpx" type="search"></icon>
    <text class="search-text">{{ query }}</text>
  </view>
</view>
<!-- 2.0 tab 栏 -->
<view class="tabs">
  <block wx:for="{{ ['综合','销量', '价格'] }}" wx:key="*this">
    <view class="tabs-item {{ activeIndex === index ? 'active' : '' }}">{{ item }}</view>
  </block>
</view>
<!-- 3.0 商品列表 -->
<view class="goods-list">
  <block wx:for="{{ goods }}" wx:key="goods_id">
    <view class="goods-item">
      <!-- 利用短路运算实现图片加载失败，显示占位图 -->
      <image class="goods-item-image" src="{{ item.goods_small_logo || '/images/default.png' }}"></image>
      <view class="goods-item-info">
        <view class="goods-item-info-name">{{ item.goods_name }}</view>
        <view class="goods-item-info-price">￥{{ item.goods_price }}</view>
      </view>
    </view>
  </block>
</view>