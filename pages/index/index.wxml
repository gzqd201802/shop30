<!-- 1.2 轮播图模块 -->
<swiper 
class="slider" 
indicator-dots 
circular
autoplay 
interval="2000" 
indicator-color="rgba(255,255,255,.5)" 
indicator-active-color="#fff"
>
  <block wx:for="{{ slider }}" wx:key="goods_id">
    <swiper-item>
      <image class="slider-image" src="{{ item.image_src }}"></image>
    </swiper-item>
  </block>
</swiper>