/* 1.0 用户收货地址 */

.address {
  /* 最小高 */
  min-height: 200rpx;
  padding: 20rpx;
  border-bottom: 10rpx solid #eb4450;
  /* 內减模式 */
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.address-selected {
  width: 100%;
}

.address-selected-item {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-selected-item:nth-child(1)::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-top: 5rpx solid #ccc;
  border-right: 5rpx solid #ccc;
  display: block;
  transform: translateX(-20rpx) rotate(45deg);
}
